<Window x:Class="TicketManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManager"
        mc:Ignorable="d"
        Title="Ticket Manager" Height="500" Width="1000" FontSize="36"  FontFamily="Arial" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontWeight="Normal" >
    <Grid Loaded="Window_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="700"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/technical-support(1).png"/>
        <Button x:Name="btnExit" Content="Exit" Margin="0,0,0,0" Grid.Row="4" Padding="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="24"/>
        <Button x:Name="btnLogOut" Content="Log Out" Grid.Row="3" Padding="10,10,10,10" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" FontSize="24"/>
        <Button x:Name="btnTickets" Content="Tickets" Grid.Row="1" Padding="10,10,10,10" Margin="0,0,0,0" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto" FontSize="24"/>
        <Button x:Name="btnAdminPanel" Content="Admin Panel" Grid.Row="2" Padding="10,10,10,10" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="24"/>
        <Label Grid.Column="1" Content="Name of Window" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="30"/>
    </Grid>
</Window>
